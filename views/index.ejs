
<head>
    <link rel="stylesheet" href="style.css">
</head>
<%- include('header.ejs'); -%>
<div class="container">
<div>
<h1 class="align">Home</h1>
<p class="align">Welcome to my bloging website JOURNAL. </p>
<p class="align">You can create posts by clicking 'Create', and view them in expanded form by clicking 'Read More'.</p>
</div>

<% if (locals.posts) { %>
    <% for(let i=1;i<= posts.length;i++) {%>
        <div >
        <h1 class="align"><%=posts[i-1].title%></h1>
        <p class="align inline"><%=posts[i-1].content.substring(0, 50)%> </p>
        <a class=" inline" href="/posts/<%= posts[i-1]._id%>">... Read More</a>
        </div>
    <% } %>
<% } %>
</div>